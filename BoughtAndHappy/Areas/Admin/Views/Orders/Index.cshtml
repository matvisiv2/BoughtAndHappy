@using BoughtAndHappy.Data.Models;

@model List<Order>

<h2>Orders</h2>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model[0].Id)</th>
        <th>@Html.DisplayNameFor(model => model[0].CreatedAt)</th>
        <th>@Html.DisplayNameFor(model => model[0].TotalPrice)</th>
        <th>@Html.DisplayNameFor(model => model[0].Status)</th>
        <th></th>
    </tr>

    @foreach (var o in Model)
    {
        <tr>
            <td>@o.Id</td>
            <td>@o.CreatedAt</td>
            <td>@o.TotalPrice</td>
            <td><div class="status-@o.Status.ToString().ToLower()">@o.Status</div></td>
            <td>
                <a asp-action="Details" asp-route-id="@o.Id">Details</a>
            </td>
        </tr>
    }
</table>