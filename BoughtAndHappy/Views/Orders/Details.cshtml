@using BoughtAndHappy.Data.Models

@model BoughtAndHappy.Data.Models.Order

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<dl class="row">
    <dt class="col-sm-2">
        <h1>Details</h1>
        <h4>Order #@Model.Id</h4>
    </dt>
    <dd class="col-sm-10">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreatedAt)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreatedAt)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TotalPrice)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TotalPrice)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Status)
            </dt>
            <dd class="col-sm-10">
                <div class="status-@Model.Status.ToString().ToLower()">
                    @Html.DisplayFor(model => model.Status)
                </div>
            </dd>
        </dl>
    </dd>
</dl>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Items[0].ProductName)</th>
            <th>@Html.DisplayNameFor(model => model.Items[0].Price)</th>
            <th>@Html.DisplayNameFor(model => model.Items[0].Quantity)</th>
            <th>Total Price, $</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Price</td>
                <td>@item.Quantity</td>
                <td>@(item.Price* item.Quantity)</td>
            </tr>
        }
        <tr>
            <td></td>
            <td></td>
            <td class="fw-bold text-end">Sum:</td>
            <td>@Model.TotalPrice</td>
        </tr>
    </tbody>
</table>

